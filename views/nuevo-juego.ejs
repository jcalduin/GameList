<section class="py-5">

    <div class="container mt-5">

        <div class="card shadow-lg">

            <div class="card-body p-5">
                
                <form action="/videojuegos/guardar" method="POST" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label class="form-label fw-bold">Título del Videojuego</label>
                        <input type="text" name="titulo" class="form-control" placeholder="Ej: Elden Ring" required>
                    </div>

                    <div class="row">

                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Plataforma</label>
                            <select name="plataforma" class="form-select" required>
                                <option value="PC">PC</option>
                                <option value="PS5">PlayStation 5</option>
                                <option value="Xbox">Xbox Series X</option>
                                <option value="Switch">Nintendo Switch</option>
                            </select>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Género</label>
                            <select name="genero" class="form-select" required>
                                <option value="Accion">Acción</option>
                                <option value="RPG">RPG</option>
                                <option value="Aventura">Aventura</option>
                            </select>
                        </div>

                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Estado de progreso</label>

                        <div class="btn-group w-100">
                            <input type="radio" class="btn-check" name="estado" id="estado1" value="Pendiente" checked>
                            <label class="btn btn-outline-secondary" for="estado1">Pendiente</label>

                            <input type="radio" class="btn-check" name="estado" id="estado2" value="Jugando">
                            <label class="btn btn-outline-primary" for="estado2">Jugando</label>
                            
                            <input type="radio" class="btn-check" name="estado" id="estado3" value="Completado">
                            <label class="btn btn-outline-success" for="estado3">Completado</label>
                        </div>

                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">URL de la carátula (Imagen)</label>
                        <input type="url" name="imagen" class="form-control" placeholder="https://link-a-la-imagen.jpg">
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a href="/" class="btn btn-secondary">Cancelar</a>
                    </div>

                </form>

            </div>

        </div>

    </div>

</section>